{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "api"
  ]
}